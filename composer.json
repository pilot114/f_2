{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
      "auto-scripts": {
        "cache:clear": "symfony-cmd",
        "assets:install %PUBLIC_DIR%": "symfony-cmd"
      },
      "post-install-cmd": [
        "@auto-scripts"
      ],
      "post-update-cmd": [
        "@auto-scripts"
      ],
      "hook-install": "chmod 755 ./.git-hooks/* | git config core.hooksPath ./.git-hooks",
      "test-api": "pest --compact tests/Api",
      "test-smoke": "pest --compact tests/SmokeTest.php",
      "test-arch": "pest --compact tests/Architecture.php",
      "syntax-lint": "parallel-lint --colors src tests",
      "ecs-lint": "ecs check",
      "rector-lint": "rector process --dry-run",
      "phpstan-lint": "phpstan analyse -c phpstan.dist.neon --memory-limit 512M",
      "ecs-fix": "ecs check --fix",
      "rector-fix": "rector process",
      "mcp-client": [
        "Composer\\Config::disableProcessTimeout",
        "npx @modelcontextprotocol/inspector node build/index.js"
      ],

      "test": "pest --compact --parallel tests/Unit",
      "coverage": "XDEBUG_MODE=coverage pest --parallel --compact --coverage --coverage-html tests/coverage --min=80 tests/Unit",
      "fix": [
        "ecs check --fix",
        "rector process"
      ],
      "check": [
        "parallel-lint --colors src tests",
        "ecs check",
        "rector process --dry-run",
        "phpstan analyse -c phpstan.neon --memory-limit=512M"
      ]
    },
    "require": {
        "php": "^8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-openssl": "*",
        "ext-redis": "*",
        "ext-simplexml": "*",
        "cuyz/valinor": "^1.17",
        "dragonmantank/cron-expression": "^3.6",
        "intervention/image": "^2.7",
        "lesstif/php-jira-rest-client": "^5.10",
        "nette/php-generator": "^4.2",
        "nikic/php-parser": "^5.6",
        "openspout/openspout": "^4.28",
        "php-mcp/server": "^3.3",
        "phpdocumentor/reflection-docblock": "^5.6",
        "phpoffice/phpspreadsheet": "^2.4",
        "portal/database": "^0.10",
        "psx/openrpc": "^0.1",
        "sentry/sentry-symfony": "^5.6",
        "symfony/cache": "^7.3",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/expression-language": "7.3.*",
        "symfony/flex": "^2.9",
        "symfony/framework-bundle": "7.3.*",
        "symfony/html-sanitizer": "7.3.*",
        "symfony/http-client": "7.3.*",
        "symfony/mailer": "7.3.*",
        "symfony/messenger": "7.3.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/redis-messenger": "7.3.*",
        "symfony/runtime": "7.3.*",
        "symfony/scheduler": "7.3.*",
        "symfony/security-bundle": "7.3.*",
        "symfony/translation": "7.3.*",
        "symfony/validator": "7.3.*",
        "symfony/yaml": "7.3.*"
    },
    "require-dev": {
        "marcocesarato/php-conventional-changelog": "^1.17",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-faker": "^3.0",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.2",
        "symplify/easy-coding-standard": "^12.6"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@192.168.6.29:portal/database.git"
        }
    ]
}
